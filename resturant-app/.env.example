# Google OAuth Configuration
# Replace with your actual Google OAuth Client ID from Google Console
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here

# Example: VITE_GOOGLE_CLIENT_ID=123456789-abcdefghijklmnop.apps.googleusercontent.com

# متغيرات البيئة لنظام إدارة المستخدمين والأدوار
# Environment Variables for User & Role Management System

# API Configuration
VITE_API_URL=http://localhost:3000
VITE_APP_NAME=Restaurant Management System

# Authentication Settings
VITE_JWT_SECRET=your-jwt-secret-key-here
VITE_JWT_EXPIRES_IN=24h
VITE_REFRESH_TOKEN_EXPIRES_IN=7d

# Default Admin User (للإعداد الأولي فقط)
VITE_DEFAULT_ADMIN_EMAIL=admin@restaurant.com
VITE_DEFAULT_ADMIN_PASSWORD=admin123!@#

# Security Settings
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOGIN_LOCKOUT_DURATION=30
VITE_PASSWORD_MIN_LENGTH=8

# Role Settings
VITE_DEFAULT_USER_ROLE=customer
VITE_ENABLE_REGISTRATION=true
VITE_REQUIRE_EMAIL_VERIFICATION=false

# UI Settings
VITE_DEFAULT_LANGUAGE=ar
VITE_USERS_PER_PAGE=12
VITE_ROLES_PER_PAGE=6
VITE_NOTIFICATION_DURATION=5000

# Development Settings (فقط في بيئة التطوير)
VITE_DEBUG_MODE=false
VITE_SHOW_API_LOGS=false
VITE_MOCK_DATA=false

# Production Settings (فقط في بيئة الإنتاج)
VITE_ENABLE_ANALYTICS=true
VITE_SENTRY_DSN=your-sentry-dsn-here
VITE_API_RATE_LIMIT=100